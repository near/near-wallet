{
  "name": "@near/ui-component-library",
  "version": "0.1.0",
  "license": "MIT",
  "module": "dist/index.es.js",
  "modern": "dist/index.modern.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c",
    "clean": "rimraf dist && rimraf node_modules",
    "start": "rimraf dist && cross-env NODE_ENV=development rollup -c -w",
    "prepare": "yarn run build",
    "test:build": "run-s build",
    "test:lint": "eslint '*/**/*.{js,ts,tsx}'",
    "test:unit": "cross-env CI=1 react-scripts test --coverage --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "test": "yarn run test:unit test:build",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "@stitches/react": "^1.2.6",
    "react": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/design-system.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/design-system.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@rollup/plugin-url": "^6.1.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.4.18",
    "@storybook/addons": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "@svgr/rollup": "^5.5.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "size-limit": "^7.0.8",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "@stitches/react": "^1.2.6"
  }
}
