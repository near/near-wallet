pipeline {
    agent any
    stages {
        stage('Package Builds') {
            parallel {
                stage('script bool compare true') {
                    when {
                        expression {
                            String e2e = sh(returnStdout: true, script: './is-package-affected.sh e2e-tests')
                            echo "$e2e"
                            return e2e.trim() == "true"
                        }
                    }
                    stages {
                        stage('script bool compare true') {
                            steps {
                                echo "script bool compare true"
                            }
                        }
                    }
                }
                stage('script bool compare false') {
                    when {
                        expression {
                            String frontend = sh(returnStdout: true, script: './is-package-affected.sh frontend')
                            echo "$frontend"
                            return frontend.trim() == "true"
                        }
                    }
                    stages {
                        stage('script bool compare false') {
                            steps {
                                echo "script bool compare false"
                            }
                        }
                    }
                }
            }
        }
    }
}
