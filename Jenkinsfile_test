pipeline {
    agent any
    stages {
        stage('Package Builds') {
            parallel {
                stage('script bool compare true') {
                    when {
                        expression {
                            Boolean e2e = sh(returnStdout: true, script: './is-package-affected.sh e2e-tests')
                            return e2e == "true"
                        }
                    }
                    stages {
                        stage('script bool compare true') {
                            steps {
                                echo "script bool compare true"
                            }
                        }
                    }
                }
                stage('script bool compare false') {
                    when {
                        expression {
                            Boolean frontend = sh(returnStdout: true, script: './is-package-affected.sh frontend')
                            return frontend == "true"
                        }
                    }
                    stages {
                        stage('script bool compare false') {
                            steps {
                                echo "script bool compare false"
                            }
                        }
                    }
                }
            }
        }
    }
}
